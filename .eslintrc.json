{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks",
        "eslint-plugin-import-helpers"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 80, // largura das minhas linhas
                "tabWidth": 2, // espaço em relação ao começo da pagina
                "singleQuote": true, // aspas simples
                "trailingComma": "none", // virgula no fim da linha
                "arrowParens": "always",
                "semi": false, // ponto e virgula no final da linha
                "endOfLine": "auto"
            }
        ],
        "react/react-in-jsx-scope": "off", // obrigar que o react esteja em tdas as paginas
        "react/prop-types": "off", 
        "react-hooks/rules-of-hooks": "error", // dar erro qnd fizer cagada
        "react-hooks/exhaustive-deps": "warn",  //  ||   warn  ||    ||     
        "import-helpers/order-imports": [
            "warn",
            {
                "newlinesBetween": "always",
                "groups": [
                    "/^react/",
                    "module",
                    "/^@shared/",
                    [
                        "parent",
                        "sibling",
                        "index"
                    ]
                ],
                "alphabetize": {
                    "order": "asc",
                    "ignoreCase": true
                }
            }
        ]
    }
}
